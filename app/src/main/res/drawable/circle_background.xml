<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Set the background color (e.g., white) -->
    <solid android:color="@android:color/white" />

    <!-- Optional: Add a border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="@color/white" /> <!-- Change the color to your preference -->

    <!-- Optional: Add padding to control spacing -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>