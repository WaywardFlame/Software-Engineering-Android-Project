<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="393dp"
    android:layout_height="852dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <!-- User Profile Icon -->
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_picture" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="123dp"
        android:layout_height="21dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="17dp"
        android:text="John Smith"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- Edit Button Background -->

    <!-- Edit Button Text -->

    <!-- Account Details -->

    <View
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="317dp"
        android:layout_marginTop="10dp"
        android:background="#529ff6" />

    <TextView
        android:id="@+id/edit_button"
        android:layout_width="44dp"
        android:layout_height="21dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="16dp"
        android:text="Edit"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="177dp"
        android:layout_height="21dp"
        android:layout_marginTop="119dp"
        android:text="Account Details:"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <!-- Past Rentals Section -->
    <TextView
        android:id="@+id/past_rentals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="314dp"
        android:text="Past Rentals: "
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="362dp"
        android:text="Toyota Camry\nDate: 10.02.2024 - 10.05.2024\nPayment: 450.50"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="456dp"
        android:text="Ford Mustang\nDate: 03.05.2024 - 03.09.2024\nPayment: 500.50"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <!-- Preferences Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="Preferences"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="655dp"
        android:text="Notifications"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="710dp"
        android:text="Language"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <!-- Toggle Switch for Notifications -->

    <!-- Language Selection Box -->
    <RelativeLayout
        android:id="@+id/notification_toggle"
        android:layout_width="51dp"
        android:layout_height="31dp"
        android:layout_marginStart="333dp"
        android:layout_marginTop="644dp"
        android:background="@drawable/toggle" />

    <!-- Contact Information -->

    <RelativeLayout
        android:id="@+id/language_dropdown"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginStart="229dp"
        android:layout_marginTop="710dp"
        android:background="@drawable/dropdown">

        <TextView
            android:id="@+id/language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:text="Select Language"
            android:textColor="#6b6b6b"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:contentDescription="Expand Arrow"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <TextView
        android:id="@+id/account_details"
        android:layout_width="384dp"
        android:layout_height="85dp"
        android:layout_marginTop="156dp"
        android:text="Email: John.Smith@gmail.com\nPhone: +1 236 657 9876\nSave Payment Method: XXX-XXX-356\nSave Location: San Antonio, Texas"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <!-- Dividers -->
    <View
        android:layout_width="393dp"
        android:layout_height="1dp"
        android:layout_marginTop="572dp"
        android:background="@android:color/black"/>

    <View
        android:layout_width="393dp"
        android:layout_height="1dp"
        android:layout_marginTop="279dp"
        android:background="@android:color/black"/>

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#529FF6"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Home"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Profile"
            android:src="@drawable/ic_booking" />

        <ImageButton
            android:id="@+id/lookup_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="lookup"
            android:src="@drawable/ic_lookup" />

        <ImageButton
            android:id="@+id/booking_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="booking"
            android:src="@drawable/ic_booking" />

        <ImageButton
            android:id="@+id/help_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Help"
            android:src="@drawable/ic_help" />

    </LinearLayout>

</RelativeLayout>
